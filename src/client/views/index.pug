doctype html
html(lang='en', ng-app='userProfile')
  head
    meta(charset='utf-8')
    link(href='styles/user-profile.css', rel='stylesheet', type='text/css')
    script(src='js/user-profile.js')
  body
    .container
      .profiles
        .profile(ng-controller='profiles')
          .profile-img
            img(ng-class="userData.sex === 'male' ? 'avitarmale' : 'avitarfemale'", alt='profile image', src='https://placehold.it/88x88')
          .profile-name {{userData.name}}
          ul.profile-address
            li {{userData.addr1}}
            li {{userData.addr2}}
            li {{userData.zip}}

